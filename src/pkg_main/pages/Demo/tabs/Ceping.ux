            <div class="bottom-info">
              <text class="count-text">{{item.count}} 人在测试</text>
              <input type="button" class="go-btn" value="去测试" onclick="startTest(item)"></input>
            </div>
          </div>
        </list-item>
        <!-- 底部留白 -->
        <list-item type="placeholder" class="placeholder-item"></list-item>
      </list>
