<script>
import router from '@system.router'
import { cepingData } from './../../../helper/ceping_data.js'

export default {
  props: ['show'],
  data() {
    return {
      currentType: 'xingge',
      listData: []
    }
  },
  onInit() {
    this.updateList()
  },
  switchTab(type) {
    this.currentType = type
    this.updateList()
  },
  updateList() {
    this.listData = cepingData[this.currentType] || []
  },
  startTest(item) {
    router.push({
      uri: 'pkg_main/pages/CepingIntro',
      params: {
        id: item.id,
        title: item.title,
        tag: item.tag,
        type: this.currentType
      }
    })
  }
}
</script>

