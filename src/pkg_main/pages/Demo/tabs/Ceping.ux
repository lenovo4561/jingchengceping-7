        </div>
      </div>

      <!-- 测评列表 -->
      <list class="list-container">
        <list-item type="ceping" class="list-item" for="{{item in listData}}">
          <image class="item-img" src="{{item.img}}"></image>
          <div class="item-info">
            <text class="item-title">{{item.title}}</text>
            <div class="tag-wrap">
              <text class="tag-text">{{item.tag}}</text>
